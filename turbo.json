{
	"$schema": "https://turbo.build/schema.json",
	"envMode": "loose",
	"tasks": {
		"setup": {
			"inputs": ["convex/**/*", "!convex/_generated"],
			"outputs": ["convex/**", ".env", ".env.local"]
		},
		"dev:app": {
			"dependsOn": ["setup"],
			"cache": false,
			"persistent": true
		},
		"dev:convex": {
			"dependsOn": ["setup"],
			"cache": false,
			"persistent": true
		},
		"codegen": {
			"inputs": ["convex/**/*", "!convex/_generated"],
			"outputs": ["convex/_generated/**"]
		},
		"build": {
			"dependsOn": ["codegen"],
			"inputs": [
				"src/**",
				"public/**",
				"docs/handbook.md",
				"package.json",
				"bun.lock*",
				"vite.config.*",
				"tailwind.config.*",
				"postcss.config.*",
				"tsconfig.json"
			],
			"outputs": ["build/**"]
		},
		"preview": {
			"dependsOn": ["build"],
			"persistent": true
		},
		"deploy": {},
		"format": {},
		"typecheck": {
			"dependsOn": ["codegen"],
			"inputs": ["**/*.{ts,tsx}"]
		},
		"test": {
			"inputs": ["**/*.test.{ts,tsx}"]
		},
		"e2e": {},
		"checks": {
			"dependsOn": ["typecheck", "test"]
		}
	}
}
