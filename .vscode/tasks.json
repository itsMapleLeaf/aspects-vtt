{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "dev",
			"dependsOn": ["dev:app", "dev:convex", "tsc:watch"],
			"dependsOrder": "parallel",
			"group": "build"
		},
		{
			"label": "dev:app",
			"type": "shell",
			"command": ["bun", "run", "dev:app"],
			"group": "build",
			"isBackground": true
		},
		{
			"label": "dev:convex",
			"type": "shell",
			"command": ["bun", "run", "dev:convex"],
			"group": "build",
			"isBackground": true
		},
		{
			"label": "tsc:watch",
			"type": "shell",
			"command": ["bunx", "tsc", "--noEmit", "--watch"],
			"group": "build",
			"isBackground": true,
			"problemMatcher": "$tsc-watch"
		}
	]
}
