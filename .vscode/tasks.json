{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "dev",
			"command": "bun",
			"args": ["run", "dev"],
			"isBackground": true,
			"icon": { "id": "run" },
			"problemMatcher": [
				{
					"pattern": {
						"regexp": "."
					},
					"background": {
						"activeOnStart": false,
						"beginsPattern": "$^",
						"endsPattern": "Local:\\s*http://.*"
					}
				}
			]
		},
		{
			"label": "tsc: watch",
			"type": "shell",
			"icon": { "id": "tools" },
			// running node directly as a workaround for bun sometimes breaking problemMatcher
			"command": "node",
			"args": ["node_modules/typescript/bin/tsc", "--watch"],
			"problemMatcher": ["$tsc-watch"],
			"isBackground": true,
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"runOptions": {
				"runOn": "folderOpen",
				"instanceLimit": 1
			}
		}
	]
}
