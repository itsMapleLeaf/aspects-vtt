{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "dev",
			"dependsOn": ["dev:remix", "dev:convex"],
			"dependsOrder": "parallel",
			"group": {
				"kind": "build",
				"isDefault": true
			}
		},
		{
			"label": "dev:remix",
			"command": "node",
			"args": ["--run", "dev:remix"],
			"isBackground": true,
			"icon": { "id": "run" },
			"problemMatcher": [
				{
					"pattern": {
						"regexp": "."
					},
					"background": {
						"beginsPattern": "$^",
						"endsPattern": "Local:\\s*http://.*"
					}
				}
			],
			"runOptions": {
				"instanceLimit": 1
			},
			"group": {
				"kind": "build"
			}
		},
		{
			"label": "dev:convex",
			"command": "node",
			"args": ["--run", "dev:convex"],
			"isBackground": true,
			"icon": { "id": "run" },
			"problemMatcher": [
				{
					"pattern": {
						"regexp": "."
					},
					"background": {
						"activeOnStart": false,
						"beginsPattern": "Preparing Convex functions",
						"endsPattern": "Convex functions ready!"
					}
				}
			],
			"runOptions": {
				"instanceLimit": 1
			},
			"group": {
				"kind": "build"
			}
		},
		{
			"label": "tsc: watch",
			"type": "shell",
			"icon": { "id": "tools" },
			"command": "node",
			"args": ["node_modules/typescript/bin/tsc", "--watch"],
			"problemMatcher": ["$tsc-watch"],
			"isBackground": true,
			"group": {
				"kind": "build",
				"isDefault": false
			},
			"runOptions": {
				"instanceLimit": 1
			}
		}
	]
}
