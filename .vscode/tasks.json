{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "typescript",
			"tsconfig": "tsconfig.json",
			"option": "watch",
			"problemMatcher": ["$tsc-watch"],
			"group": "build",
			"label": "tsc watch",
			"runOptions": {
				"runOn": "folderOpen",
				"instanceLimit": 1
			},
			"dependsOn": ["pnpm install"]
		},
		{
			"type": "shell",
			"command": "pnpm",
			"args": ["install"],
			"problemMatcher": [],
			"label": "pnpm install"
		},
		{
			"label": "build",
			"type": "npm",
			"script": "build",
			"group": {
				"kind": "build",
				"isDefault": true
			}
		},
		{
			"label": "dev convex",
			"type": "npm",
			"script": "dev:convex",
			"isBackground": true,
			"problemMatcher": {
				"pattern": { "regexp": ".*" },
				"background": {
					"activeOnStart": true,
					"beginsPattern": ".*",
					"endsPattern": "Convex functions ready!"
				}
			}
		}
	]
}
