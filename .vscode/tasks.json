{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "dev",
			"dependsOn": ["dev:remix", "dev:convex"],
			"dependsOrder": "parallel",
			"group": "build"
		},
		{
			"label": "dev:remix",
			"command": "node",
			"args": ["--run", "dev:remix"],
			"isBackground": true,
			"icon": { "id": "run" },
			"problemMatcher": [
				{
					"pattern": {
						"regexp": "."
					},
					"background": {
						"beginsPattern": "$^",
						"endsPattern": "Local:\\s*http://.*"
					}
				}
			],
			"runOptions": {
				"instanceLimit": 1
			},
			"group": "build"
		},
		{
			"label": "dev:convex",
			"command": "node",
			"args": ["--run", "dev:convex"],
			"isBackground": true,
			"icon": { "id": "run" },
			"problemMatcher": [
				{
					"pattern": {
						"regexp": "."
					},
					"background": {
						"activeOnStart": false,
						"beginsPattern": "Preparing Convex functions",
						"endsPattern": "Convex functions ready!"
					}
				}
			],
			"runOptions": {
				"instanceLimit": 1
			},
			"group": "build"
		},
		{
			"label": "tsc: watch",
			"type": "typescript",
			"option": "watch",
			"tsconfig": "tsconfig.json",
			"group": "build",
			"isBackground": true
		}
	]
}
