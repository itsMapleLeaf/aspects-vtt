{
	"$schema": "https://biomejs.dev/schemas/1.5.3/schema.json",
	"files": {
		"ignore": ["convex/_generated"]
	},
	"organizeImports": {
		"enabled": true
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"a11y": {
				"noAutofocus": "off"
			},
			"suspicious": {
				"noArrayIndexKey": "off",
				"noAssignInExpressions": "off",
				"noImplicitAnyLet": "off"
			},
			"nursery": {
				"useImportType": "error",
				"noUnusedImports": "warn"
			},
			"style": {
				"noUnusedTemplateLiteral": "off",
				"noParameterAssign": "off"
			}
		}
	},
	"formatter": {
		"enabled": false
	},
	"javascript": {
		"formatter": {
			"semicolons": "asNeeded"
		}
	},
	"vcs": {
		"enabled": true,
		"clientKind": "git",
		"useIgnoreFile": true
	},
	"json": {
		"parser": {
			"allowComments": true
		}
	}
}
