{
	// copied from "@total-typescript/tsconfig/bundler/dom"
	"compilerOptions": {
		/* Resolution */
		"module": "ESNext",
		"moduleResolution": "Bundler",
		"moduleDetection": "force",
		"resolveJsonModule": true,
		"allowJs": true,
		"allowImportingTsExtensions": true,
		"paths": {
			"~/convex/*": ["./convex/*"],
			"~/lib/*": ["./lib/*"],
			"~/shared/*": ["./shared/*"],
			"~/*": ["./src/*"]
		},
		"rootDirs": [".", "./.react-router/types"],

		/* Type Checking */
		"target": "esnext",
		"lib": ["esnext", "dom", "dom.iterable"],
		"strict": true,
		"noUncheckedIndexedAccess": true,
		"noImplicitOverride": true,
		// "verbatimModuleSyntax": true,
		"isolatedModules": true,
		"skipLibCheck": true,
		"jsx": "react-jsx",
		// "noErrorTruncation": true,

		/* Emit */
		"noEmit": true,
		"incremental": true
	},
	"include": [
		"./*.*",
		"src",
		"convex",
		"shared",
		"scripts",
		"docs",
		"lib",
		".react-router"
	]
}
