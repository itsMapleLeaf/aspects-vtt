{
	"compilerOptions": {
		"allowJs": true,
		"allowImportingTsExtensions": true,
		"baseUrl": ".",
		"forceConsistentCasingInFileNames": true,
		"isolatedModules": true,
		"jsx": "react-jsx",
		"lib": ["DOM", "DOM.Iterable", "ES2023"],
		"module": "Preserve",
		"noEmit": true,
		"noErrorTruncation": true,
		"noUncheckedIndexedAccess": true,
		"paths": {
			"~/*": ["./app/*"],
			"convex-backend/*": ["./convex/*"]
		},
		"skipLibCheck": true,
		"strict": true,
		"target": "ESNext",
		"types": ["@remix-run/node", "vite/client", "react/canary", "react-dom/canary"]
	},
	"include": [
		"**/*.ts",
		"**/*.tsx",
		"**/.server/**/*.ts",
		"**/.server/**/*.tsx",
		"**/.client/**/*.ts",
		"**/.client/**/*.tsx"
	],
	"exclude": ["node_modules", "dist", "convex/_generated"]
}
