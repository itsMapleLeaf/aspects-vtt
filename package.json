		"@floating-ui/react-dom": "2.0.8",
		"@fontsource-variable/nunito": "5.0.18",
		"@remix-run/node": "^2.8.1",
		"@remix-run/react": "^2.8.1",
		"@remix-run/serve": "^2.8.1",
		"@vercel/remix": "2.8.1",
		"colorjs.io": "0.5.0",
		"convex": "1.10.0",
		"convex-helpers": "0.1.27",
		"date-fns": "3.6.0",
		"hash-wasm": "4.11.0",
		"isbot": "^5.1.2",
		"lodash-es": "4.17.21",
		"lucide-react": "0.363.0",
		"random-word-slugs": "0.1.7",
		"react": "19.0.0-canary-95e6f032c-20240401",
		"react-dom": "19.0.0-canary-95e6f032c-20240401",
		"react-textarea-autosize": "8.5.3",
		"react-virtuoso": "4.7.4",
		"remix-routes": "1.7.2",
		"tailwind-merge": "2.2.2",
		"ts-dedent": "2.2.0",
		"zod": "3.22.4"
	},
	"devDependencies": {
		"@biomejs/biome": "1.6.3",
		"@remix-run/dev": "^2.8.1",
