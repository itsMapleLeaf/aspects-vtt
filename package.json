		"prettier-plugin-tailwindcss": "0.5.12",
		"remix-flat-routes": "0.6.4",
		"rollup-plugin-visualizer": "5.12.0",
		"tailwindcss": "3.4.1",
		"tailwindcss-animate": "^1.0.7",
		"typescript": "5.4.3",
		"vite": "^5.2.6",
		"vite-plugin-inspect": "0.8.3"
