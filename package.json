{
	"name": "aspects-vtt",
	"private": true,
	"type": "module",
	"engines": {
		"node": "20"
	},
	"imports": {
		"#app/*": "./app/*",
		"#convex/*": "./convex/*"
	},
	"scripts": {
		"postinstall": "bun scripts/copy-patches.ts",
		"build": "remix vite:build",
		"dev": "run-p --print-label --race 'dev:*'",
		"dev:remix": "remix vite:dev",
		"dev:convex": "convex dev --tail-logs",
		"preview": "dotenv -c -- remix-serve ./build/server/index.js",
		"lint": "biome check .",
		"format": "biome check . --apply-unsafe && prettier --write .",
		"typecheck": "tsc"
	},
	"dependencies": {
		"@ariakit/react": "^0.4.4",
		"@clerk/remix": "4.0.0-beta.39",
