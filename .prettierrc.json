{
	"semi": false,
	"useTabs": true,
	"printWidth": 100,
	"experimentalTernaries": true,
	"quoteProps": "consistent",
	"plugins": [
		"prettier-plugin-organize-imports",
		"prettier-plugin-jsdoc",
		"prettier-plugin-tailwindcss"
	],
	"tailwindFunctions": ["twMerge", "twc"],
	"overrides": [
		{
			"files": "package.json",
			"options": {
				"useTabs": false
			}
		},
		{
			"files": "{pnpm-lock.yaml,convex/_generated/**}",
			"options": {
				"requirePragma": true
			}
		}
	]
}
