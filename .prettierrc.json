{
	"useTabs": true,
	"semi": false,
	"experimentalTernaries": true,
	"plugins": ["prettier-plugin-jsdoc", "prettier-plugin-tailwindcss"],
	"tailwindFunctions": ["cva", "twMerge", "mergeClassProp"],
	"overrides": [
		{
			"files": ["package.json"],
			"options": {
